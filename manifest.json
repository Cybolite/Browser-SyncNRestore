{
  "manifest_version": 3,
  "name": "Browser SyncNRestore",
  "version": "1.0",
  "description": "Save and restore open tabs for later use.",
  "author": "Shivesh Chandra",
  "homepage_url": "https://www.cybolite.com",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "tabGroups",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/icon/16.png",
    "32": "assets/icon/32.png",
    "48": "assets/icon/48.png",
    "64": "assets/icon/64.png",
    "128": "assets/icon/128.png",
    "256": "assets/icon/256.png",
    "512": "assets/icon/512.png",
    "1024": "assets/icon/1024.png"
  }
}